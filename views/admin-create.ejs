<%- include('./partials/header')-%>
<%- include('./partials/navbar-admin')-%>

<div class="content-admin-home">
  <div class="container">
      <div class="row">
          <div class="col-md-12 title-form-create-activity">
              <h1>Ajoutez une prestation</h1>
          </div>
      </div>


      <!--Message Flash error create activity-->
      <% if(errorActivity.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= errorActivity %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% } %>

      <div class="row">
          <div class="col-md-12 form-create-activity">
              <form action="/admin/create/activity" method="POST" enctype="multipart/form-data">
                  <div class="form-group">
                    <label for="exampleInputEmail1">Nom de la prestation</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Entrez le nom de la prestation" name="name">
                  </div>
                  <div class="form-group">
                      <label for="exampleFormControlSelect1">Selectionnez la categorie</label>
                      <select class="form-control" id="exampleFormControlSelect1" name="categorie_id">
                        <% categories.forEach(function(entry) {%>
                        <option value="<%= entry.id%>"><%= entry.name%></option>
                        <%});%>
                      </select>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                          <div class="form-group">
                              <label for="exampleInputEmail1">Ajoutez un prix a la prestation en €</label>
                              <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Entrez le prix de la prestation" name="price">
                            </div>
                        </div>
                        <div class="col-md-6">
                          <div class="form-group">
                              <label for="exampleInputEmail1">Ajoutez une durée a la prestation en min</label>
                              <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Entrez la durée de la prestation" name="time">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                      <label for="exampleFormControlTextarea1">Description de la prestation</label>
                      <textarea class="form-control" id="exampleFormControlTextarea1" rows="4" placeholder="Décrivez en détails votre activité" name="text"></textarea>
                    </div>
                    <div class="form-group">
                      <label for="exampleFormControlFile1">Ajoutez une image</label>
                      <input type="file" class="form-control-file" id="exampleFormControlFile1" name="image">
                  </div>
                  <button type="submit" class="btn btn-primary">Ajoutez</button>
              </form>                  
          </div>
      </div>
      <div class="row">
          <div class="col-md-12 title-form-create-category">
              <h1>Ajoutez une categorie</h1>
          </div>
      </div>


      <!--Message Flash error create activity-->
      <% if(errorCategory.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= errorCategory %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% } %>


      <div class="row">
          <div class="col-md-12 form-create-activity">
              <form action="/admin/create/category" method="POST" enctype="multipart/form-data">
                  <div class="form-group">
                    <label for="exampleInputEmail1">Nom de la prestation</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Entrez le nom de la prestation" name="name">
                  </div>
                  <div class="form-group">
                      <label for="exampleFormControlFile1">Ajoutez une image</label>
                      <input type="file" class="form-control-file" id="exampleFormControlFile1" name="image">
                  </div>
                  <button type="submit" class="btn btn-primary">Ajoutez</button>
                </form>
          </div>
      </div>
  </div>
</div>

<%- include('./partials/footer')-%>