<%- include('./partials/header')-%>
<%- include('./partials/navbar-admin')-%>

<div class="content-admin-home">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12 title-form-create-category">
                        <h1>Modifiez : <%= category.name %></h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 form-create-activity">
                        <form method="POST" action="/admin/edit/category/<%= category.id %>?_method=PUT" enctype="multipart/form-data">
                            <div class="form-group">
                              <label for="exampleInputEmail1">Nom de la categorie</label>
                              <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Entrez le nom de la categorie" name="name" value="<%= category.name %>">
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlFile1">Ajoutez une image</label>
                                <input type="file" class="form-control-file" id="exampleFormControlFile1" name="image">
                            </div>
                            <button type="submit" class="btn btn-primary">Modifiez</button>
                          </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer')-%>